@model IEnumerable<WebAppCheck.Models.Posts>

@{
    ViewData["Title"] = "Index";
}
<div>

</div>
<h1>Posts</h1>
<a asp-action="CreateOrEdit" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> New Post</a>
<div class="container mt-4">
    
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                
                <div class="card-header text-white bg-success pb-4">

                    <div class="d-flex justify-content-between pt-2 pb-2">
                    UserName | @Html.DisplayFor(modelItem => item.CreatedDate)
                        <form asp-action="Delete" asp-route-id="@item.PostId">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="CreateOrEdit" asp-route-id="@item.PostId" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure to delete this Post?')">
                                    <i class="far fa-trash-alt"></i>
                                </button>
                            </div>
                        </form>
                    </div>
    
                    
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.PostTitle)</h4>
                
                </div>
            
                <div class="card-body">
                <p class="">@Html.DisplayFor(modelItem => item.PostContent)
                </p>
                 </div>
            </div>
            
            
        }
        
